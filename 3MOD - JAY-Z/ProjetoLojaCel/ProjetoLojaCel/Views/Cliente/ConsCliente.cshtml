@model IEnumerable<ProjetoLojaCel.Models.ModelCliente>
@{
    ViewBag.Title = "ConsCliente";
}

<style>
    td .mais {
        width: 100px;
        font-size: 10px;
    }

    .carrinho {
        margin-top: -85px;
    }

    .car {
        font-size: 15px;
        font-family: sans-serif;
        font-weight: 500;
    }

    .p1 {
        font-size: 20px;
        font-family: sans-serif;
        font-weight: 300;
    }

    h4 {
        font-size: 40px;
        font-family: sans-serif;
        font-weight: bold;
        color: #9119D1;
        padding-bottom: 50px;
    }
</style>

<div class="carrinho">
    <h4>Consulta do Cliente</h4>

    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CodCli)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.usuario)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NomeCli)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CpfCli)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DataNascCli)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EnderecoCli)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NumeroCasaCli)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CepCli)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NmBairro)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NmEstado)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EmailCli)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CelularCli)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TelefoneCli)
                </th>
            </tr>
        </thead>

        @foreach (var item in Model)
        {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CodCli)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.usuario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeCli)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CpfCli)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataNascCli)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EnderecoCli)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumeroCasaCli)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CepCli)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NmBairro)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NmEstado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmailCli)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CelularCli)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TelefoneCli)
                </td>

                <td>
                    @Html.ActionLink("Atualizar", "EditarCliente", new { id = item.CodCli }) |
                    @Html.ActionLink("Excluir", "excluirCliente", new { id = item.CodCli }, new { onclick = "return confirm('Deseja realmente excluir?');" })
                </td>
            </tr>
        }
    </table>
</div>

