@model IEnumerable<ProjetoLojaCel.Models.ModelContato>
@{
    ViewBag.Title = "ConsContato";
}

<style>
    td .mais {
        width: 100px;
        font-size: 10px;
    }

    .carrinho {
        margin-top: -85px;
    }

    .car {
        font-size: 15px;
        font-family: sans-serif;
        font-weight: 500;
    }

    .p1 {
        font-size: 20px;
        font-family: sans-serif;
        font-weight: 300;
    }

    h4 {
        font-size: 40px;
        font-family: sans-serif;
        font-weight: bold;
        color: #9119D1;
        padding-bottom: 50px;
    }
</style>

<div class="carrinho">
    <h4>Consulta do Cliente</h4>

    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CodContato)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NomeContato)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EmailContato)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NumeroContato)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MensagemContato)
                </th>
            </tr>
        </thead>

        @foreach (var item in Model)
        {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CodContato)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeContato)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmailContato)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumeroContato)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MensagemContato)
                </td>
            </tr>
        }
    </table>
</div>

