<!DOCTYPE html>
<html>
<head>
    <style type="text/css">

        .social_footer_ul {
            display: table;
            margin: 15px auto 0 auto;
            list-style-type: none;
            margin-left: 860px;
        }

            .social_footer_ul li {
                padding-left: 20px;
                padding-top: 10px;
                float: left;
            }

                .social_footer_ul li a {
                    background-color: #ffffff;
                    border: 1px solid #CCC;
                    padding: 8px;
                    border-radius: 50%;
                    border-color: #9119D1;
                }

                    .social_footer_ul li a:hover {
                        background-color: #9119D1;
                        transition: all .4s;
                    }

                .social_footer_ul li i {
                    color: #2a2727;
                    width: 20px;
                    height: 20px;
                    text-align: center;
                }

        .icones {
            margin-bottom: -24px;
        }
    </style>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://kit.fontawesome.com/b2bcb852c4.js" crossorigin="anonymous"></script>
    <title>@ViewBag.Title - Meu Aplicativo ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color: #9119D1; font-family: sans-serif; font-weight: bold;">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" title="mais opções">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li style="color: #fff">@Html.ActionLink("Loja", "Index", "Home")</li>
                    <li>@Html.ActionLink("Serviços", "Portfolio", "Home")</li>
                    <li>@Html.ActionLink("Contato", "Contato", "Home")</li>
                    <li>@Html.ActionLink("Empresa", "Empresa", "Home")</li>
                    @if (Session["tipoLogado2"] != null)
                    {
                        <li style="margin-left: 635px;">@Html.ActionLink("Administrador", "Admin", "Login")</li>
                    }
                    @if (Session["tipoLogado1"] != null)
                    {
                        <li style="margin-left: 675px;">@Html.ActionLink("Carrinho", "Carrinho", "Home")</li>
                    }
                    @if (Session["usuarioLogado"] == null)
                    {
                        <li style="margin-left: 752px;">@Html.ActionLink("Login", "Index", "Login")</li>
                    }
                    @if (Session["usuarioLogado"] != null)
                    {
                        <li>@Html.ActionLink("Sair", "Logout", "Login")</li>
                    }
                </ul>
            </div>
        </div>
    </div>
</body>
<div class="container body-content">
    @RenderBody()
    <hr />
    <footer style="text-align: center; font-style: italic;">
        <div class="icones">
            <ul class="social_footer_ul">
                <li><a href=""><i class="fab fa-facebook-f"></i></a></li>
                <li><a href=""><i class="fab fa-twitter"></i></a></li>
                <li><a href=""><i class="fab fa-linkedin"></i></a></li>
                <li><a href=""><i class="fab fa-instagram"></i></a></li>
            </ul>
        </div>
        <p>
            &copy; @DateTime.Now.Year - Copyright ©️ 2022 - TODOS OS DIREITOS RESERVADOS.<br />Feito por (Victor,Samuel,Giovanni e Robson)
        </p>
    </footer>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</html>
